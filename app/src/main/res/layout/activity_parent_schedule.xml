<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_parent_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:padding="24dp">


    <TextView
        android:id="@+id/txtScheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/ChosenDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_date_default"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtScheduleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#82FF73"
        android:text="@string/select_date_btn"
        android:textColor="#616161"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChosenDate" />


    <TextView
        android:id="@+id/txtHowManyController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_many_controllers"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/pickDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/controllerNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_one"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtHowManyController"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/decrementButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#82FF73"
        android:text="@string/decrease"
        android:textColor="#0288D1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/controllerNumberText"
        app:layout_constraintTop_toTopOf="@id/controllerNumberText" />


    <Button
        android:id="@+id/incrementButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="#82FF73"
        android:text="@string/increase"
        android:textColor="#0288D1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/controllerNumberText"
        app:layout_constraintTop_toTopOf="@id/controllerNumberText" />


    <Button
        android:id="@+id/setDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#82FF73"
        android:text="@string/schedule_for_day"
        android:textColor="#616161"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controllerNumberText" />

</androidx.constraintlayout.widget.ConstraintLayout>
