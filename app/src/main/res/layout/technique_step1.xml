<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTechniqueStep1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/technique_step1_prompt"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtTechniquePrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtTechniquePrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/technique_step1_prompt"
        android:textSize="20sp"
        android:padding="20dp"
        android:gravity="center"
        android:maxLines="10"
        android:importantForAccessibility="yes"
        app:layout_constrainedHeight="false"
        app:layout_constraintTop_toBottomOf="@id/imgTechniqueStep1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnEmpty"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/technique_step1_button_empty"
        android:contentDescription="@string/technique_step1_button_empty"
        android:minHeight="48dp"
        android:padding="16dp"
        android:maxLines="2"
        android:backgroundTint="#82FF73"
        android:textColor="#263238"
        android:importantForAccessibility="yes"
        app:layout_constrainedHeight="false"
        app:layout_constraintTop_toBottomOf="@id/txtTechniquePrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnNotEmpty"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:text="@string/technique_step1_button_not_empty"
        android:contentDescription="@string/technique_step1_button_not_empty"
        android:minHeight="48dp"
        android:maxLines="2"
        android:backgroundTint="#82FF73"
        android:textColor="#263238"
        android:padding="16dp"
        android:importantForAccessibility="yes"
        app:layout_constrainedHeight="false"
        app:layout_constraintTop_toBottomOf="@id/btnEmpty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
