<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Guideline to push entire layout downward -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_padding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="55dp" />

    <!-- HOME TITLE -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_padding"/>

    <!-- Streak Button -->
    <Button
        android:id="@+id/streakbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Daily Streak"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/top_padding" />

    <!-- PEF Zone Display -->
    <FrameLayout
        android:id="@+id/PEFZone"
        android:layout_width="200dp"
        android:layout_height="217dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <View
            android:id="@+id/dashboard_zone_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/dashboard_zone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Zone"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dashboard_zone_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--%"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Take Medicine Button -->
    <Button
        android:id="@+id/takemedbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Medicine"
        app:layout_constraintEnd_toStartOf="@+id/PEFZone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="40dp"/>

    <!-- Medicine Log Button -->
    <Button
        android:id="@+id/medicinelogbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medicine Log"
        app:layout_constraintTop_toBottomOf="@+id/takemedbutton"
        app:layout_constraintStart_toStartOf="@+id/takemedbutton"
        app:layout_constraintEnd_toEndOf="@+id/takemedbutton" />

    <!-- Enter PEF Button -->
    <Button
        android:id="@+id/pefbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter PEF"
        app:layout_constraintTop_toBottomOf="@+id/medicinelogbutton"
        app:layout_constraintStart_toStartOf="@+id/medicinelogbutton"
        app:layout_constraintEnd_toEndOf="@+id/medicinelogbutton" />

    <!-- Daily Check-in Button -->
    <Button
        android:id="@+id/checkinbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Check-In"
        app:layout_constraintTop_toBottomOf="@+id/pefbutton"
        app:layout_constraintStart_toStartOf="@+id/pefbutton"
        app:layout_constraintEnd_toEndOf="@+id/pefbutton" />

    <!-- Planned Schedule Button -->
    <Button
        android:id="@+id/childschedulebutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Planned Schedule"
        app:layout_constraintTop_toBottomOf="@+id/checkinbutton"
        app:layout_constraintStart_toStartOf="@+id/checkinbutton"
        app:layout_constraintEnd_toEndOf="@+id/checkinbutton" />

    <!-- Emergency Triage Button -->
    <Button
        android:id="@+id/triagebutton"
        android:layout_width="184dp"
        android:layout_height="62dp"
        android:text="Emergency Triage Mode"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/childschedulebutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sign Out Button -->
    <Button
        android:id="@+id/childsignoutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
