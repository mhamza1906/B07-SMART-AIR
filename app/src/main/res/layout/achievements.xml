<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ───────────────────────────────
             Row 1: Technique Streak
             ─────────────────────────────── -->
        <ImageView
            android:id="@+id/imgTechniqueStreak"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/technique_streak"
            android:contentDescription="@string/technique_streak_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtTechniqueStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Consecutive Technique-Session Completed: 0"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/imgTechniqueStreak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgTechniqueStreak"
            app:layout_constraintBottom_toBottomOf="@id/imgTechniqueStreak" />

        <!-- ───────────────────────────────
             Row 2: Controller Streak
             Positioned 36dp below Row 1
             ─────────────────────────────── -->
        <ImageView
            android:id="@+id/imgControllerStreak"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/controller_streak"
            android:contentDescription="@string/controller_streak_desc"
            app:layout_constraintTop_toBottomOf="@id/imgTechniqueStreak"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtControllerStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Consecutive Controller Days Completed: 0"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/imgControllerStreak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgControllerStreak"
            app:layout_constraintBottom_toBottomOf="@id/imgControllerStreak" />

        <!-- ───────────────────────────────
             Row 3: Star Trio (Triangle)
               BuddingStar = top vertex
               ShiningStar = bottom-left
               LuckyStar   = bottom-right
             Positioned 36dp below Controller Row
             ─────────────────────────────── -->
        <!-- Top vertex -->
        <ImageView
            android:id="@+id/imgBuddingStar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/budding_star"
            android:contentDescription="@string/budding_star_desc"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imgControllerStreak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom-left vertex -->
        <ImageView
            android:id="@+id/imgShiningStar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:src="@drawable/shining_star"
            android:contentDescription="@string/shining_star_desc"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imgBuddingStar"
            app:layout_constraintEnd_toStartOf="@id/imgBuddingStar" />

        <!-- Bottom-right vertex -->
        <ImageView
            android:id="@+id/imgLuckyStar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="48dp"
            android:src="@drawable/lucky_star"
            android:contentDescription="@string/lucky_star_desc"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imgBuddingStar"
            app:layout_constraintStart_toEndOf="@id/imgBuddingStar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
