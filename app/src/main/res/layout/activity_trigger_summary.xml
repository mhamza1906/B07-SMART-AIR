<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_trigger_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trigger_summary_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txt_trigger_summary_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trigger_summary_subtitle"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <ProgressBar
            android:id="@+id/trigger_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_trigger_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trigger_empty"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <CheckBox
            android:id="@+id/chk_share_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="320dp"
            android:layout_marginTop="16dp"
            android:text="@string/share_chart_hint"
            android:checked="false" />


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_triggers"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
