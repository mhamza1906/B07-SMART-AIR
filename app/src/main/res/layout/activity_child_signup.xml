<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/smart_air_cover"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ChildSignUpActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <!-- First Name -->
        <EditText
            android:id="@+id/fNameEditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:autofillHints="givenName"
            android:hint="@string/fName"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Last Name -->
        <EditText
            android:id="@+id/lNameEditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:autofillHints="familyName"
            android:hint="@string/lName"
            android:textColorHint="#000000"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/fNameEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Birthday -->
        <EditText
            android:id="@+id/birthdayEditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="24dp"
            android:textColorHint="#000000"
            android:hint="@string/DOB"
            android:focusable="false"
            android:inputType="date"
            android:autofillHints="birthDateDay|birthDateMonth|birthDateYear"
            app:layout_constraintTop_toBottomOf="@id/lNameEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Username -->
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:hint="@string/userName"
            android:inputType="text"
            android:textColorHint="#000000"
            android:minHeight="48dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/birthdayEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Password -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:autofillHints="newPassword"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:minHeight="48dp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/usernameEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColorHint="#000000"
            android:layout_marginTop="16dp"
            android:text="@string/linkChildBtn"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
