<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/controller_adherence_title"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <CheckBox
            android:id="@+id/chk_share_adherence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="320dp"
            android:text="@string/share_chart_hint"
            android:textSize="16sp"
            android:paddingTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/imgControllerStreak"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/empty_streak"
            android:contentDescription="@string/controller_streak_desc"
            app:layout_constraintTop_toBottomOf="@id/chk_share_adherence"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/txtControllerStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/imgControllerStreak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgControllerStreak"
            app:layout_constraintBottom_toBottomOf="@id/imgControllerStreak"/>


        <ProgressBar
            android:id="@+id/progress_adherence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imgControllerStreak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>


        <TextView
            android:id="@+id/txt_empty_adherence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_adherence_data"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/progress_adherence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_adherence"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt_empty_adherence"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
