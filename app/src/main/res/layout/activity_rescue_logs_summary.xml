<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Last Rescue Use -->
        <TextView
            android:id="@+id/txt_last_rescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_rescue_use"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp" />

        <!-- Share Checkbox -->
        <CheckBox
            android:id="@+id/chk_share_rescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="320dp"
            android:text="@string/share_chart_hint" />

        <!-- 7-day title -->
        <TextView
            android:id="@+id/txt_title_rescue_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rescue_7_day_title"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingTop="24dp" />

        <!-- 7-day Line Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_rescue_7"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp" />

        <!-- 30-day title -->
        <TextView
            android:id="@+id/txt_title_rescue_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rescue_30_day_title"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingTop="24dp" />

        <!-- 30-day Line Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_rescue_30"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
