<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top spacer -->
    <View
        android:id="@+id/topSpacer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar -->
    <TextView
        android:id="@+id/txtUserAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/circle_avatar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topSpacer" />

    <!-- Select Child Button -->
    <Button
        android:id="@+id/btnSelectChild"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/select_child_btn"
        android:textColor="@color/dark_words"
        android:backgroundTint="#82FF73"
        app:layout_constraintTop_toBottomOf="@id/txtUserAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Link a New Child -->
    <Button
        android:id="@+id/btnCreateChild"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/link_child_page_btn"
        android:textColor="@color/dark_words"
        android:backgroundTint="#82FF73"
        app:layout_constraintTop_toBottomOf="@id/btnSelectChild"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <FrameLayout
        android:id="@+id/containerParentDashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateChild"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Your RecyclerView for the children list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ChildSummaries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <!-- Your teammate's placeholder for the share content -->
        <TextView
            android:id="@+id/share_content_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Content Placeholder"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:baselineAligned="false"
        android:padding="8dp"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:id="@+id/tabMyChildren"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tabMyChildrenIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/my_children"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tabMyChildrenLabel"
                android:text="@string/page_my_children"
                android:textSize="12sp"
                android:textColor="@color/dark_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/tabShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tabShareIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/share"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tabShareLabel"
                android:text="@string/page_share"
                android:textSize="12sp"
                android:textColor="@color/dark_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>