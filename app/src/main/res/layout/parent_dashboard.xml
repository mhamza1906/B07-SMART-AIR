<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Spacer -->
    <View
        android:id="@+id/topSpacer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar -->
    <TextView
        android:id="@+id/txtUserAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_avatar_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topSpacer" />

    <!-- Select Child -->
    <Button
        android:id="@+id/btnSelectChild"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#82FF73"
        android:text="@string/select_child_btn"
        android:textColor="@color/dark_words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtUserAvatar" />

    <!-- Create Child -->
    <Button
        android:id="@+id/btnCreateChild"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#82FF73"
        android:text="@string/link_child_page_btn"
        android:textColor="@color/dark_words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSelectChild" />

    <Button
        android:id="@+id/btnParentAlert"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#82FF73"
        android:text="@string/parent_alerts_btn"
        android:textColor="@color/dark_words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateChild" />

    <!-- Main Content Container -->
    <FrameLayout
        android:id="@+id/containerParentDashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnParentAlert">

        <!-- My Children Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ChildSummaries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <!-- Share Placeholder -->
        <TextView
            android:id="@+id/share_content_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/share_content_placeholder"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- Share Page Main Button -->
        <Button
            android:id="@+id/btnShareToProvider"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#82FF73"
            android:text="@string/share_to_provider_btn"
            android:textColor="@color/dark_words"
            android:visibility="gone" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shareChildSelectorRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#EEEEEE"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- My Children -->
        <LinearLayout
            android:id="@+id/tabMyChildren"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/tabMyChildrenIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/my_children"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tabMyChildrenLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_my_children"
                android:textColor="@color/dark_words"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Share -->
        <LinearLayout
            android:id="@+id/tabShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/tabShareIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/share"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tabShareLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_share"
                android:textColor="@color/dark_words"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
