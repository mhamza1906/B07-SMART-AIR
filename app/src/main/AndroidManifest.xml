<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smart_air">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smart_air">

        <!-- Initiate Activity : Login Page -->
        <activity
            android:name=".LoginActivityView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Sign Up Activity if user does not have an account -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true"/>

        <!-- Child Login Activity if (Child) user wants to login with user name -->
        <activity
            android:name=".ChildLoginActivityView"
            android:exported="true"/>

        <!-- FIX 3: ChildSignUp has no intent filter and is not exported. -->
        <!-- Also corrected the name to assume the file is ChildSignUp.java. -->
        <activity
            android:name=".ChildSignUp"
            android:exported="false"/>

    </application>
</manifest>
